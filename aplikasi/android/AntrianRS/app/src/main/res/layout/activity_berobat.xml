<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:background="@color/textwhite">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <!--  Name Label -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/strDaftarRumahSakit"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:textColor="@color/btnColorBlack"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Anda harus memilih Rumah Sakit, Poli dan Dokter sesuai dengan kebutuhan."
            android:layout_marginBottom="40dp"
            android:gravity="left"
            android:textSize="16sp"/>

        <!--  Rumah Sakit Label -->
        <Spinner
            android:id="@+id/idRumahSakit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"/>

        <!--  Poli Label -->
        <Spinner
            android:id="@+id/idPoli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"/>

        <!--  Dokter Label -->
        <Spinner
            android:id="@+id/idDokter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="2dp"/>

        <!-- <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/strUseBPJS" /> -->

        <!-- Confirm Button -->
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnConfirm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_marginBottom="24dp"
            android:background="@color/btnColorBlack"
            android:textColor="#ffffff"
            android:padding="12dp"
            android:text="@string/Daftar"/>

    </LinearLayout>
</ScrollView>
